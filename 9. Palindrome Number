class Solution {
    public boolean isPalindrome(int x) {
       int d =x;
       
        int c = 0;
        if(x>-1){
        while (x != 0) {
            int b = x % 10;
            c = c* 10 + b;
            x = x/ 10;
        }
        
        if(d==c){
            return true;
            }
        }
        
        return false;
    
    }
}
